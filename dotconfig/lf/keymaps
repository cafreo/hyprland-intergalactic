# UNBIND KEYS
map gg
map m
map G
map p
map k
map y

# BASIC KEYBINDS
map <esc> :setfilter '';unselect;clear
map c copy
map x cut
map v paste
map l "create (soft/hard) link"
map <enter> open
map <c-r> reload
map <delete> delete
map d trash
map r rename
map R bulk-rename
map Zr undo-bulk-rename
map ":" read
map f search
map / search
map <space> search
map F filter
map h set hidden!
map u :unselect;clear
map t :toggle;down
map T :unselect;invert
map i invert
map <c-q> quit
map <up> up
map <s-up> half-up
map <s-pgup> top
map <down> down
map <s-down> half-down
map <s-pgdn> bottom
map <left> updir
map <right> open

# COPY FILE NAME
map yy "copy filename"
map yx "copy filename with extension"
map ys "show filename with extension"
map yd "copy path of current directory"
map yp "copy filepath"

# SET RATIO
map "!" :set ratios '1:2:2'; set preview true
map '"' :set ratios '1:3'; set preview false
map '§' :set ratios '1:4'; set preview true

# MAKE KEYBINDS
