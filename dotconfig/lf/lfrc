# REMOVE METADATA

cmd "󱀷  remove metadata" %{{
    count=$(printf "%s\n" "$fx" | wc -l)
    exiftool -all= -overwrite_original $fx
    lf -remote 'send :unselect;reload'	
    lf -remote "send $id echo '   successfully removed metadata from $count file(s)"
}}

# DUPLICATE FILE

cmd "  duplicate file" &{{
    count=$(printf "%s\n" "$fx" | wc -l)
    for file in $fx; do
        if [[ -f "$file" ]]; then
            name="${file%.*}"
            ext="${file##*.}"
            num=1
            new="${name} (${num}).${ext}"
            
            while [[ -e "$new" ]]; do   
                num=$((num + 1))
                new="${name} (${num}).${ext}"
            done

            cp "$file" "$new"
        fi
    done

    lf -remote "send $id :unselect;reload"
    lf -remote "send $id echo '   $count file(s) duplicated successfully'"
}}

