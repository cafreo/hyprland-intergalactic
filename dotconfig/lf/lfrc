# TRASH BIN

cmd trash %{{
    count=$(printf "%s\n" "$fx" | wc -l)
    printf "   move $count file(s) to trash bin? [y/n] "
    read -r ans
    if [[ "$ans" =~ ^[Yy]$ ]]; then
        trash-put $fx &
        TRASH_PID=$!
        lf -remote "send unselect"
        wait $TRASH_PID

        if [ $? -eq 0 ]; then
            lf -remote "send reload"
            lf -remote "send echo '   moved $count file(s) to trash bin successfully'"
        else
            lf -remote "send echoerr 'error'"
        fi
    else
        lf -remote "send echoerr 'aborted'"
    fi
}}

cmd "󰠙  restore trashed file" ${{
    trash-restore
}}

cmd "󰗨  empty trash bin" ${{
    trash-empty --trash-dir ~/.local/share/Trash
}}

# DELETE PERMANENTLY

cmd delete %{{
    count=$(printf "%s\n" "$fx" | wc -l)
    printf "   delete $count file(s) permanently? [y/n] "
    read -r ans
    if [[ "$ans" =~ ^[Yy]$ ]]; then
        rm -r $fx &
        RM_PID=$!
        lf -remote "send unselect"
        wait $RM_PID

        if [ $? -eq 0 ]; then
            lf -remote "send reload"
            lf -remote "send echo '   deleted $count file(s) successfully'"
        else
            lf -remote "send echoerr 'error'"
        fi
    else
        lf -remote "send echoerr 'aborted'" 
    fi
}}

