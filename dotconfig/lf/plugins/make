# MAKE NEW DIRECTORY

cmd "󰉗  make directory" %{{
    printf " 󰉗  create new directory: "
    read ans
    mkdir $ans
    lf -remote "send $id echo ' 󰉗  created directory \"$ans\"'"
}}

# MAKE NEW NEW DIRECTORY FROM SELECTED FILES

cmd "󰉗  make directory from selected files" %{{
    printf " 󰉗  create new directory: "
    read ans
    mkdir $ans
    mv $fx $ans
    lf -remote "send $id echo ' 󰉗  created directory \"$ans\"'"
}}

# MAKE NEW FILE

cmd "󰝒  make file" %{{
    printf " 󰝒  create new file: "
    read ans
    touch $ans
    lf -remote "send $id echo ' 󰝒  created file \"$ans\"'"
}}

# MAKE NEW PLAYLIST

cmd "󰲸  make playlist" %{{
    printf " 󰲸  create new playlist: "
    read ans
    playlist=$ans.m3u

    if [ -f $playlist ]
        then rm $playlist
    fi

#echo "#EXTM3U" >> $playlist
#echo "#PLAYLIST:$ans" >> $playlist

     for file in "$fs"; do
        echo "$file" >> $playlist
     done

     lf -remote 'send $id :unselect;reload'	
     lf -remote "send $id echo ' 󰲸  created playlist \"$ans\"'"
}}

# KEYMAPS

map md "󰉗  make directory"
map mD "󰉗  make directory from selected files"
map mf "󰝒  make file"
map mp "󰲸  make playlist"
