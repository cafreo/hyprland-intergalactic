scrollbar {
    border: 0;
    padding: 0;
}
inputbar {
    spacing: 0;
    border: 0px solid;
    border-color: red;
    border-radius: 3px;
    padding: 3px;
    margin: 14px 12px;
    background-image: @gradient;
    index: 0;
}
inputbar normal {
    foreground-color: red;
    background-color: green;
    text-color: red;
}
overlay {
    background-color: green;
}
prompt {
    text-color: @text;
    padding: 10px 6px;
}
entry {
    text-color: @text;
    padding: 10px 6px;
    background-color: @bg;
}
mode-switcher {
    border: 2px;
    padding: 0.5em 1em;
    background-color: red;
    index: 10;
}
button selected {
    text-color: red;
}
inptbar {
    children: [ prompt,textbox-prompt-colon,entry,case-indicator ];
}
textbox-prompt-colon {
    expand:     true;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
    text-color: @text;
}
error-message {
    border: 2px;
    padding: 1em;
    background-color: #FF8888;
    text-color: @text;
}
